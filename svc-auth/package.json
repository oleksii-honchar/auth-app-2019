{
  "name": "svc-auth",
  "version": "2.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "start": "yarn docker:up:loc",
    "prebuild": "yarn clean:dist",
    "build": "bash scripts/build.sh",
    "build:analyze": "cross-env-shell BUILD_ANALYZE=true bash ./scripts/build.sh",
    "build:loc": "bash scripts/build.loc.sh",
    "build:loc:analyze": "cross-env-shell BUILD_ANALYZE=true bash ./scripts/build.loc.sh",
    "cm": "npx git-cz",
    "check:all": "run-p lint types:check",
    "clean:dist": "rm -rf dist/static",
    "docker:build": "bash devops/scripts/build-docker.sh",
    "docker:up:loc": "bash ./devops/ci/scripts/up.loc.sh",
    "docker:up:prod:loc": "bash ./devops/ci/scripts/up.prod.loc.sh",
    "launch": "yarn launch:prod",
    "launch:loc": "bash scripts/launch.loc.sh",
    "launch:prod": "bash scripts/launch.sh",
    "launch:prod:loc": "bash scripts/launch.prod.loc.sh",
    "lint": "npx eslint src --config ./configs/eslint.config.js  --ext .ts,.tsx,.json --ignore-pattern '/node_modules/*' --ignore-pattern '**/*.d.ts' --ignore-pattern '**/*.spec.ts'",
    "lint:fix": "yarn lint --fix",
    "test": "jest --config ./configs/jest.config.js",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "types:check": "tsc -p tsconfig.json",
    "types:watch": "yarn types:check -- --watch",
    "watch": "run-p types:watch watch:loc",
    "watch:loc": "bash scripts/watch.loc.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn check:all",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS --config=./configs/commitlint.config.js"
    }
  },
  "config": {
    "commitizen": {
      "path": "svc-auth/node_modules/cz-conventional-changelog"
    }
  },
  "author": "Oleksii Honchar",
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "16.0.0",
    "@types/express-rate-limit": "^3.3.2",
    "axios": "0.19.0",
    "bcryptjs": "2.4.3",
    "body-parser": "1.19.0",
    "bunyan": "1.8.12",
    "bunyan-format": "0.2.1",
    "cookie-parser": "1.4.4",
    "env-cmd": "10.0.1",
    "express": "4.17.1",
    "express-rate-limit": "^5.0.0",
    "faker": "4.1.0",
    "handlebars": "4.2.0",
    "http-status-codes": "1.3.2",
    "jsonwebtoken": "8.5.1",
    "lodash": "4.17.15",
    "mongoose": "5.7.0",
    "node-cache": "4.2.1",
    "nodemailer": "6.3.0",
    "npm-run-all": "4.1.5",
    "safe-buffer": "5.2.0",
    "toobusy-js": "0.5.1",
    "uuid": "3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "8.1.0",
    "@commitlint/config-conventional": "8.1.0",
    "@types/bcryptjs": "2.4.2",
    "@types/body-parser": "1.17.1",
    "@types/bunyan": "1.8.6",
    "@types/bunyan-format": "0.2.0",
    "@types/cookie-parser": "1.4.2",
    "@types/express": "4.17.1",
    "@types/faker": "4.1.5",
    "@types/hapi__joi": "15.0.4",
    "@types/jest": "24.0.18",
    "@types/jsonwebtoken": "8.3.3",
    "@types/lodash": "4.14.138",
    "@types/mongoose": "5.5.17",
    "@types/node": "12.7.5",
    "@types/node-cache": "4.1.3",
    "@types/nodemailer": "6.2.1",
    "@types/toobusy-js": "0.5.2",
    "@types/uuid": "3.4.5",
    "@typescript-eslint/eslint-plugin": "2.2.0",
    "@typescript-eslint/parser": "2.2.0",
    "commitizen": "4.0.3",
    "compression-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "5.0.4",
    "cross-env": "5.2.1",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "6.3.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-import-resolver-typescript": "1.1.1",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jest": "22.17.0",
