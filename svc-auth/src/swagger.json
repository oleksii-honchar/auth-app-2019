{
  "swagger": "2.0",
  "info": {
    "description": "AuthApp service",
    "version": "0.0.0",
    "title": "svc-auth"
  },
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/api/version": {
      "get": {
        "tags": [
          "version"
        ],
        "summary": "Get current version of service",
        "description": "text response with app version received",
        "operationId": "version",
        "produces": [
          "application/json; charset=utf-8"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "string",
              "description": "delivery-flow-service:1.0.0"
            }
          }
        }
      }
    },
    "/api/register": {
      "post": {
        "tags": [
          "register"
        ],
        "summary": "Register new user",
        "description": "New user created and activation email send",
        "operationId": "register",
        "produces": [
          "application/json; charset=utf-8"
        ],
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "parameters": [
          {
            "in": "formData",
            "name": "firstName",
            "type": "string",
            "required": true,
            "description": "User first name"
          },
          {
            "in": "formData",
            "name": "lastName",
            "type": "string",
            "required": true,
            "description": "User last name"
          },
          {
            "in": "formData",
            "name": "email",
            "type": "string",
            "required": true,
            "description": "New user email"
          },
          {
            "in": "formData",
            "name": "password",
            "type": "string",
            "required": true,
            "description": "Password"
          },
          {
            "in": "formData",
            "name": "passwordConfirmation",
            "type": "string",
            "required": true,
            "description": "Password confirmation"
          }
        ],
        "responses": {
          "201": {
            "description": "Successfully created",
            "schema": {
              "type": "string",
              "example": "Successfully created"
            }
          },
          "422": {
            "description": "Unprocessible entity",
            "schema": {
              "type": "string",
              "example": "Already exists"
            }
          },
          "500": {
            "description": "Internal server error",
            "schema": {
              "type": "string",
              "example": "Internal server error"
            }
          }
        }
      }
    },
    "/api/login": {
      "post": {
        "tags": [
          "login"
        ],
        "summary": "Login existing user",
        "description": "Access token created and provided with response",
        "operationId": "login",
        "produces": [
          "application/json; charset=utf-8"
        ],
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "parameters": [
          {
            "in": "formData",
            "name": "email",
            "type": "string",
            "required": true,
            "description": "New user email"
          },
          {
            "in": "formData",
            "name": "password",
            "type": "string",
            "required": true,
            "description": "Password"
          }
        ],
        "responses": {
          "201": {
            "description": "Successfully logged in",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                },
                "token": {
                  "type": "string"
                }
              }
            },
            "examples": {
              "message": "Successfully logged in",
              "token": ""
            }
          },
          "403": {
            "description": "Unauthorized",
            "schema": {
              "type": "string",
              "example": "Unauthorized"
            }
          },
          "422": {
            "description": "Unprocessible entity",
            "schema": {
              "type": "string",
              "example": "Unprocessible entity"
            }
          }
        }
      }
    },
    "/api/users/current": {
      "get": {
        "tags": [
          "users"
        ],
        "security": [
          {
            "Bearer": []
          }
        ],
        "summary": "Get current user",
        "description": "Get current user json by auth token",
        "operationId": "users",
        "produces": [
          "application/json; charset=utf-8"
        ],
        "consumes": [
          "text/plain; charset=utf-8"
        ],
        "responses": {
          "201": {
            "description": "Ok",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "403": {
            "description": "Unauthorized",
            "schema": {
              "type": "string",
              "example": "Unauthorized"
            }
          },
          "422": {
            "description": "Unprocessible entity",
            "schema": {
              "type": "string",
              "example": "Unprocessible entity"
            }
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "createdAt": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "isEmailVerified": {
          "type": "boolean"
        },
        "email": {
          "type": "string"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        }
      }
    }
  }
}