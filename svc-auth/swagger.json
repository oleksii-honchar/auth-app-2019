{
  "swagger": "2.0",
  "info": {
    "description": "AuthApp service",
    "version": "0.0.0",
    "title": "svc-auth"
  },
  "basePath": "/",
  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/api/version": {
      "get": {
        "tags": [
          "version"
        ],
        "summary": "Get current version of service",
        "description": "text response with app version received",
        "operationId": "version",
        "produces": [
          "text/plain; charset=utf-8"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "string",
              "description": "delivery-flow-service:1.0.0"
            }
          }
        }
      }
    },
    "/api/register": {
      "post": {
        "tags": [
          "register"
        ],
        "summary": "Register new user",
        "description": "New user created and activation email send",
        "operationId": "register",
        "produces": [
          "text/plain; charset=utf-8"
        ],
        "consumes": [
          "application/x-www-form-urlencoded"
        ],
        "parameters": [
          {
            "in": "formData",
            "name": "firstName",
            "type": "string",
            "required": true,
            "description": "User first name"
          },
          {
            "in": "formData",
            "name": "lastName",
            "type": "string",
            "required": true,
            "description": "User last name"
          },
          {
            "in": "formData",
            "name": "email",
            "type": "string",
            "required": true,
            "description": "New user email"
          },
          {
            "in": "formData",
            "name": "password",
            "type": "string",
            "required": true,
            "description": "Password"
          },
          {
            "in": "formData",
            "name": "passwordConfirmation",
            "type": "string",
            "required": true,
            "description": "Password confirmation"
          }
        ],
        "responses": {
          "201": {
            "description": "Successfully created",
            "schema": {
              "type": "string",
              "example": "Successfully created"
            }
          },
          "422": {
            "description": "Unprocessible entity",
            "schema": {
              "type": "string",
              "example": "Already exists"
            }
          },
          "500": {
            "description": "Internal server error",
            "schema": {
              "type": "string",
              "example": "Internal server error"
            }
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "bearerAuth": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  }
}
