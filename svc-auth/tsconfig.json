{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./",
    "declaration": true,
    "diagnostics": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "incremental": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "newLine": "lf",
    "noEmit": true,
    "noLib": false,
    "noStrictGenericChecks": true,
    "paths": {
      "src/*": [ "src/*" ]
    },
    "removeComments": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [ // relative to ./configs/tsconfig.json
    "src/**/*"
  ],
  "exclude": [ // relative to ./configs/tsconfig.json
    "node_modules",
    "dist",
    "docs",
    "coverage",
    "devops"
  ]
}
